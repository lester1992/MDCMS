@inherits LayoutComponentBase
@using MudBlazor

<MudGrid Style="height:100vh; margin:0;">
    <!-- Left side with background image -->
    <MudItem xs="0" md="4" Style="padding:0;">
        <div style="
            height:100%;
            background:url('/images/bg_1.png') center center no-repeat;
            background-size:cover;">
        </div>
    </MudItem>

    <!-- Right side for login form (Body placeholder) -->
    <MudItem xs="12" md="8" Class="d-flex justify-center align-center" Style="background:#f5f7fb;">
        <MudPaper Elevation="8" Class="pa-8" Style="width:380px; border-radius:16px;">
            @Body
        </MudPaper>
    </MudItem>
</MudGrid>
